<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.exchange_rates.presentation.home.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_dashboardFragment2"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.exchange_rates.presentation.dashboard.DashboardFragment"
        android:label="Dashboard" >

        <argument
            android:name="selected_currency"
            app:argType="string"
            android:defaultValue="EUR" />

        <argument
            android:name="base_currency"
            app:argType="string"
            android:defaultValue="EUR" />
    </fragment>

</navigation>